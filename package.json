{
  "name": "agentic-soup-mvp-web-full",
  "private": true,
  "version": "0.2.0",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20 <21"
  },
  "volta": {
    "node": "20.15.1",
    "pnpm": "9.0.0"
  },
  "scripts": {
    "preinstall": "corepack enable || true && corepack prepare pnpm@9.0.0 --activate || true",
    "build": "pnpm -r build",
    "dev": "concurrently -n soup,browser,site \"pnpm --filter @soup/soup-runner dev\" \"pnpm --filter @soup/browser-gateway dev\" \"pnpm --filter @soup/site-kb dev\"",
    "start": "concurrently -n soup,browser,site \"pnpm --filter @soup/soup-runner start\" \"pnpm --filter @soup/browser-gateway start\" \"pnpm --filter @soup/site-kb start\"",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,js,jsx,tsx,json}\"",
    "format:check": "prettier --check \"**/*.{ts,js,jsx,tsx,json}\"",
    "test": "pnpm -r test",
    "redis:up": "cd infra && docker compose up -d",
    "redis:down": "cd infra && docker compose down",
    "redis:run": "docker run -d --name soup-redis -p 6379:6379 --health-cmd 'redis-cli ping || exit 1' --health-interval 5s --health-timeout 3s --health-retries 10 redis:7-alpine redis-server --appendonly no",
    "redis:stop": "docker rm -f soup-redis || true",
    "prisma:generate": "pnpm --filter @soup/soup-runner prisma:generate",
    "prisma:migrate": "pnpm --filter @soup/soup-runner prisma:migrate",
    "build-agent": "pnpm --filter @soup/build-agent start",
    "build-agent:dev": "pnpm --filter @soup/build-agent dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,jsx,json}": [
      "prettier --write"
    ]
  }
}
