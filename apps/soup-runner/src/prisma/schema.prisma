generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Blueprint {
  id            String   @id @default(cuid())
  version       Int
  llmModel      String
  temperature   Float
  tools         String
  archetype     String   @default("research-specialist") // Agent specialization type
  coopThreshold Float
  minBalance    Int
  mutationRate  Float
  maxOffspring  Int
  createdAt     DateTime @default(now())
}

model Swarm {
  id          String   @id @default(cuid())
  name        String   // Fantasy-style swarm name like "The Crimson Collective"
  description String?  // Optional description
  balance     Int      @default(0)  // Swarm-level balance
  reputation  Float    @default(0.5) // Swarm-level reputation
  attempts    Int      @default(0)   // Total job attempts
  wins        Int      @default(0)   // Total successful jobs
  meanTtcSec  Int      @default(0)   // Mean time to completion
  alive       Boolean  @default(true)
  createdAt   DateTime @default(now())
  lastBeat    DateTime @default(now())

  // Relations
  agents      AgentState[]
  jobs        Job[]
  ledgerEntries Ledger[]
  memories    SwarmMemory[]
}

model AgentState {
  id          String   @id @default(cuid())
  blueprintId String?  // Optional for swarm agents
  swarmId     String?  // Reference to swarm (nullable for backward compatibility)
  name        String?  // Fantasy-style name like "Zephyr the Code-Weaver"
  archetype   String?  // Agent archetype (llm-only, web-browser, etc.) - stored directly for swarm agents
  balance     Int
  reputation  Float
  attempts    Int
  wins        Int
  meanTtcSec  Int
  alive       Boolean  @default(true)
  lastBeat    DateTime @default(now())

  // Relations
  swarm       Swarm?   @relation(fields: [swarmId], references: [id])
}

model Job {
  id        String   @id @default(cuid())
  category  String
  payload   String
  payout    Int
  deadlineS Int
  swarmId   String?  // Reference to assigned swarm (nullable for backward compatibility)
  agentId   String?  // Reference to individual agent (for backward compatibility)
  createdAt DateTime @default(now())

  // Relations
  swarm     Swarm?   @relation(fields: [swarmId], references: [id])
}

model Ledger {
  id           String   @id @default(cuid())
  agentId      String?  // Individual agent (for backward compatibility)
  swarmId      String?  // Swarm-level transaction
  jobId        String?  // Optional job ID for tracking which job this transaction relates to
  delta        Int
  reason       String
  qualityGrade Int?     // Quality score 0-100 for successful jobs
  ts           DateTime @default(now())

  // Relations
  swarm        Swarm?   @relation(fields: [swarmId], references: [id])
}

model Edge {
  id     String   @id @default(cuid())
  fromId String
  toId   String
  topic  String
  ts     DateTime @default(now())
}

// Tool Memory System - Agent-specific tool libraries
model AgentTool {
  id            String   @id @default(cuid())
  agentId       String   // Owner agent ID
  toolName      String   // Unique tool name
  toolCode      String   // The actual tool implementation
  description   String   // What the tool does
  category      String   // Tool category (math, web_research, etc.)
  successCount  Int      @default(0) // How many times it succeeded
  failureCount  Int      @default(0) // How many times it failed
  avgQuality    Float    @default(0.0) // Average quality score
  lastUsed      DateTime @default(now())
  createdAt     DateTime @default(now())
  embedding     String?  // Vector embedding for similarity search

  // Compound index for efficient lookups
  @@unique([agentId, toolName])
  @@index([agentId, category])
  @@index([agentId, successCount])
}

// Agent Memory System - General experiences and learnings
model AgentMemory {
  id          String   @id @default(cuid())
  agentId     String   // Owner agent ID
  memoryType  String   // Type: "experience", "learning", "strategy", "failure"
  content     String   // The memory content
  context     String   // Context when memory was created
  importance  Float    @default(0.5) // How important this memory is (0-1)
  accessCount Int      @default(0) // How often accessed
  lastAccess  DateTime @default(now())
  createdAt   DateTime @default(now())
  embedding   String?  // Vector embedding for similarity search

  @@index([agentId, memoryType])
  @@index([agentId, importance])
  @@index([agentId, lastAccess])
}

// Swarm Memory System - Collective knowledge at swarm level
model SwarmMemory {
  id          String   @id @default(cuid())
  swarmId     String   // Owner swarm ID
  memoryType  String   // Type: "strategy", "pattern", "best_practice", "avoid"
  content     String   // The memory content
  context     String   // Context when memory was created
  importance  Float    @default(0.5) // How important this memory is (0-1)
  accessCount Int      @default(0) // How often accessed
  lastAccess  DateTime @default(now())
  createdAt   DateTime @default(now())
  embedding   String?  // Vector embedding for similarity search

  // Relations
  swarm       Swarm    @relation(fields: [swarmId], references: [id])

  @@index([swarmId, memoryType])
  @@index([swarmId, importance])
}